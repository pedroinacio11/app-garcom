<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phinacio.garconapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Garçonete Só de Cenoura</name>
    <description>
        Aplicativo para uso dos waiters dentro do restaurante.
    </description>
    <author email="contato@phinacio.com" href="https://phinacio.com">
        Pedro Henrique | phinacio
    </author>
    <preferences name="Orientation" value="portrait" />
    <preferences name="Fullscreen" value="true" />
    <preferences name="BackgroundColor" value="0xF2F2F2FF" />
    <preferences name="DisallowOverscroll" value="true" />
    <icon src="resources\android\icon\drawable-xhdpi-icon.png" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="StatusBarBackgroundColor" value="#F57F17" />
</widget>
